<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/talk_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="56dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/text_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Testy bezpieczeństwa na przykładach"
        android:textColor="@color/primary"/>

    <TextView
        android:id="@+id/text_time_slot"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:text="10:30 - 11:00"/>

    <TextView
        android:id="@+id/text_venue"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/text_time_slot"
        android:text="Transition Technologies"/>

    <TextView
        android:id="@+id/text_language"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_venue"
        android:text="English"/>

</RelativeLayout>