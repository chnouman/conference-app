<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/text_time_slot"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="9:00 - 10:00"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/button_add_to_my_agenda"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_blue_bright"/>

        <TextView
            android:id="@+id/text_title"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_time_slot"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Tools and Techniques"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"/>

        <View
            android:id="@+id/speakers_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/text_title"
            android:background="@drawable/divider_speakers"/>

        <TextView
            android:id="@+id/text_language"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/speakers_divider"
            android:text="(EN)"/>


        <TextView
            android:id="@+id/text_speakers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/speakers_divider"
            android:layout_toLeftOf="@id/text_language"
            android:text="Adam Nowak"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>