<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        style="@style/SelectableCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-light"
                android:text="Projektowanie aplikacji iOS - wzorce i triki które każdy programista znać powinien"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/text_language"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:text="(EN)"/>

            <TextView
                android:id="@+id/text_speaker"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_title"
                android:layout_toLeftOf="@id/text_language"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="By Adam Nowakfdsa fas fdas fsda fads dsa fdsa fdsa fasfasd fas fsad fas faf"/>

            <TextView
                android:id="@+id/text_description"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_speaker"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="6"
                android:text="Prograndamentalne idee stojące za tymProgramowanie reaktywne jako lekarstwo na ból głowy związany z kodem asynchronicznym. W czasie mojej prezentacji przedstawię fundamentalne idee stojące za tymProgramowanie reaktywne jako lekarstwo na ból głowy związany z kodem asynchronicznym. W czasie mojej prezentacji przedstawię fundamentalne idee stojące za tymProgramowanie reaktywne jako lekarstwo na ból głowy związany z kodem asynchronicznym. W czasie mojej prezentacji przedstawię fundamentalne idee stojące za tymProgramowanie reaktywne jako lekarstwo na ból głowy związany z kodem asynchronicznym. W czasie mojej prezentacji przedstawię fundamentalne idee stojące za tymProgramowanie reaktywne jako lekarstwo na ból głowy związany z kodem asynchronicznym. W czasie mojej prezentacji przedstawię fundamentalne idee stojące za tym paradygmatem oraz zademonstruję od podstaw jak"/>

            <TextView
                android:id="@+id/text_more"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_description"
                android:layout_marginTop="4dp"
                android:textColor="@color/primary"
                android:layout_alignParentRight="true"
                android:text="@string/more"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>