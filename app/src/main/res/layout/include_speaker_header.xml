<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/speaker_avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dummy_avatar"
        app:civ_border_color="@color/accent"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/text_speaker_name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/speaker_avatar"
        android:text="PaweÅ‚ Nowak"
        android:textColor="@color/primary"/>

    <ImageButton
        android:id="@+id/www_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_speaker_name"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/web_button_selector"/>

    <ImageButton
        android:id="@+id/twitter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_speaker_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/www_button"
        android:background="@drawable/twitter_button_selector"/>

</RelativeLayout>