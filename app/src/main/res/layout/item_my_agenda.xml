<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    style="@style/CardViewStyle.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_time_slot"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="9:00 - 10:00"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_venue"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_time_slot"
            android:text="Mobica"/>

        <TextView
            android:id="@+id/text_title"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_venue"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:text="Projektowanie aplikacji iOS - wzorce i triki które każdy programista znać powinien"
            android:textColor="@color/accent_extra_dark"
            android:textStyle="bold"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/text_title"
            android:background="@drawable/horizontal_divider"/>

        <TextView
            android:id="@+id/text_language"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/divider"
            android:layout_marginLeft="8dp"
            android:text="(EN)"/>


        <TextView
            android:id="@+id/text_speakers"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_toLeftOf="@id/text_language"
            android:text="Adam Nowak"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>