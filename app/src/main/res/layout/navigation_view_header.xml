<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/image_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_image_height"/>

    <TextView
        android:id="@+id/text_event_title"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/event_name"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/text_event_title_part2"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_event_title"
        android:layout_toRightOf="@id/text_event_title"
        android:text="@string/event_version"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text_event_date"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_event_title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_event_place"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_event_date"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:id="@+id/button_map"
        style="@style/MapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_event_place"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:elevation="4dp"/>
</RelativeLayout>