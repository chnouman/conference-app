<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/speaker_card"
    style="@style/CardViewSelectableItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/speaker_avatar"
            android:layout_width="@dimen/speaker_avatar_small_size"
            android:layout_height="@dimen/speaker_avatar_small_size"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/text_speaker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/speaker_avatar"
            android:layout_toStartOf="@id/speaker_avatar"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>